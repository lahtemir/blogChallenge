<%- include("partials/header"); -%>
<h1>Home</h1>

<p> <%=homeText%> </p>

<%# Looping through all posts and printing titles as h2 and posts as paragraphs  %>
<% postTexts.forEach(function(post) { %>
<h1> <%= post.title %></h1>
<p>
  <%= post.content.substring(0,100) + " ..." %>
  <a href="/posts/<%= post._id %>"">Read More</a>
</p>


<% }); %>
